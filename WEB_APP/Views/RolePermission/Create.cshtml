@model CORPORATE_DISBURSEMENT_ADMIN_DAL.Models.ViewModels.UserPermissionViewModels.Comapiroleperm
@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @if (TempData["failed"] != null)
            {
                <img src="~/images/failed.jpg" width="30" height="30">
                <span style="color: red; font-size:large; " role="alert">
                    @TempData["failed"]
                </span>
                <br />
            }
            @if (TempData["success"] != null)
            {
                <img src="~/images/ok.jpg" width="50" height="50">
                <span style="color: green; font-size:large;" role="alert">
                    @TempData["success"]
                </span>
                <br />
            }
            @using (Html.BeginForm("SearchResult", "RolePermission", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data", @class = "form-material form-horizontal m-t-30" }))
            {
                @Html.AntiForgeryToken()

                @*<form action="/RolePermission/SearchResult" method="post" class="form-material form-horizontal m-t-30"> *@
                @Html.ValidationSummary(true)
                <div class="row">
                    <div class="col-md-3">
                        <label class="col-sm-12">Role</label>
                        @Html.DropDownListFor(model => model.RoleId, Model.DropDownListForRole, "Select a Role", new { @class = "form-control" })
                    </div>
                </div>

                <div class="row" style="margin-top:1%">
                    <div class="col-md-12 m-t-30">
                        <button type="submit" class="btn btn-info waves-effect waves-light m-r-10">Find Permission</button>
                    </div>
                </div>
                <h4>To Show list of Role Permission mapping @Html.ActionLink("click here", "Index")</h4>
            }
            @*</form>*@
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#manual-in-out2").addClass('collapse in');
        $("#manual-in-out4").addClass('collapse in');

        $("#rp-id").addClass('active');
    });
</script>

