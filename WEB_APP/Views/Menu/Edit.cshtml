@model DATA.Models.ViewModels.UserPermissionViewModels.CommonMenus
@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @if (TempData["failed"] != null)
            {
                <img src="~/images/failed.jpg" width="30" height="30">
                <span style="color: red; font-size:large; " role="alert">
                    @TempData["failed"]
                </span>
                <br />
            }
            @if (TempData["success"] != null)
            {
                <img src="~/images/ok.jpg" width="50" height="50">
                <span style="color: green; font-size:large;" role="alert">
                    @TempData["success"]
                </span>
                <br />
            }

            @using (Html.BeginForm("Edit", "Menu", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data", @class = "form-material form-horizontal m-t-30" }))
            {
                @Html.AntiForgeryToken()
                @*<form action="#" method="post" class="form-material form-horizontal m-t-30"> *@
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model=>model.CreatedBy)
                @Html.HiddenFor(model=>model.CreatedDate)
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">URL</label>
                        <input type="text" class="form-control" name="URL" value="@Html.DisplayFor(model => model.Url)">
                    </div>
                </div>
                 <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">Name</label>
                        <input type="text" class="form-control" name="MenuName" value="@Html.DisplayFor(model => model.MenuName)">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">Priority</label>
                        <input type="text" class="form-control" asp-for="MenuOrder" required="required">
                        @Html.ValidationMessageFor(model => model.MenuOrder)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">Parent Menu</label>
                        @Html.DropDownListFor(model => model.ParentMenu, Model.DropDownList, "Top Menu", new { @class = "form-control" })

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">Status</label>
                        @Html.DropDownListFor(model => model.IsActive, ViewData["list1"] as List<SelectListItem>, new { @class = "form-control" })
                        @*<select class="form-control" name="IS_ACTIVE">
                                <option value=1 >Active</option>
                                <option value=0 >Inactive</option>
                            </select>*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 m-t-30" style="margin-top:1%">
                        <button type="submit" class="btn btn-info waves-effect waves-light m-r-10">Update</button>
                    </div>
                </div>
            }
            @*</form>*@
            <br />
            <h4>
                @Html.ActionLink("Back to List", "Index")
            </h4>
        </div>
    </div>
</div>




<script>
    $(document).ready(function(){
        $("#manual-in-out2").addClass('collapse in');
        $("#manual-in-out4").addClass('collapse in');

    	$("#menu-id").addClass('active');
    });
</script>

