@using DATA.Models
@model Appointment

<h2>Delete Appointment</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this appointment?
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Patient.Name</dd>

        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">@Model.Doctor.Name</dd>

        <dt class="col-sm-2">Appointment Date</dt>
        <dd class="col-sm-10">@Model.AppointmentDate.ToString("g")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.AppointmentStatus</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
