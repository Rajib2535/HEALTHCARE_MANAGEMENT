@using DATA.Models
@model             Role
@{
    ViewBag.Title = "Create";
    //Layout = "~/Views/Shared/_GuestLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @if (TempData["failed"] != null)
            {
                <img src="~/images/failed.jpg" width="30" height="30">
                <span style="color: red; font-size:large; " role="alert">
                    @TempData["failed"]
                </span>
                <br />
            }
            @if (TempData["success"] != null)
            {
                <img src="~/images/ok.jpg" width="50" height="50">
                <span style="color: green; font-size:large;" role="alert">
                    @TempData["success"]
                </span>
                <br />
            }
            @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data", @class = "form-material form-horizontal m-t-30" }))
            {
                @Html.AntiForgeryToken()
                @*<form action="#" method="post" class="form-material form-horizontal m-t-30"> *@
                @Html.HiddenFor(model => model.Id)
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">Role Title</label>
                        <input type="text" class="form-control" name="Name" value="@Html.DisplayFor(model => model.Name)">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">Description</label>
                        <textarea class="form-control" cols=" 45" rows="5" name="Description">@Html.DisplayFor(model => model.Description)</textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">Status</label>
                        @* <select class="form-control" asp-for="IS_ACTIVE" value="@Html.DisplayFor(model => model.IS_ACTIVE)">
                            <option value=1>Active</option>
                            <option value=0>Inactive</option>
                        </select> *@
                        <input type="checkbox" asp-for="IsActive" />
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="row" style="margin-top:1%">
                    <div class="col-md-12 m-t-30">
                        <button type="submit" class="btn btn-info waves-effect waves-light m-r-10">Update</button>
                    </div>
                </div>
                @*</form>*@
            }
            <br />
            <h4>
                @Html.ActionLink("Back to List", "Index")
            </h4>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $("#manual-in-out2").addClass('collapse in');
        $("#manual-in-out3").addClass('collapse in');

        $("#role-id").addClass('active');
    });
</script>

