@model DATA.Models.ViewModels.UserPermissionViewModels.AssignRole
@{
    ViewData["Title"] = "Edit User Role";

}

@{
    ViewBag.Title = "Edit User Role";
}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @if (TempData["failed"] != null)
            {
                <img src="~/images/failed.jpg" width="30" height="30">
                <span style="color: red; font-size:large; " role="alert">
                    @TempData["failed"]
                </span>
                <br />
            }
            @if (TempData["success"] != null)
            {
                <img src="~/images/ok.jpg" width="50" height="50">
                <span style="color: green; font-size:large;" role="alert">
                    @TempData["success"]
                </span>
                <br />
            }
            @using (Html.BeginForm("Edit", "UserRole", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data", @class = "form-material form-horizontal m-t-30" }))
            {
                @Html.AntiForgeryToken()
                @*<form action="#" method="post" class="form-material form-horizontal m-t-30">*@
                @Html.HiddenFor(model => model.Id)               
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">User</label>
                        @Html.DropDownListFor(model => model.UserId, Model.DropDownListForUser, "Select User", new { @class = "form-control" })
                    </div>
                    <div class="col-sm-3">
                        <label class="col-sm-12">Role</label>
                        @Html.DropDownListFor(model => model.RoleId, Model.DropDownListForRole, "Select Role", new { @class = "form-control" })
                    </div>
                </div>                
                <div class="row" style="margin-top:1%">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-info">Update</button>
                    </div>
                </div>
            }

            <br />
            <p>
                <h4>@Html.ActionLink("Back to List", "Index")</h4>
            </p>
        </div>
    </div>
</div>




<script>
    $(document).ready(function () {
        $("#manual-in-out2").addClass('collapse in');
        $("#manual-in-out3").addClass('collapse in');

        $("#ur-id").addClass('active');
    });
</script>

