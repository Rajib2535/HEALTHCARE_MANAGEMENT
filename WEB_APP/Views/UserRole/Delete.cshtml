@model CORPORATE_DISBURSEMENT_ADMIN_DAL.Models.ViewModels.UserPermissionViewModels.AssignRole
@{
    ViewData["Title"] = "Delete User Role";
}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @if (TempData["failed"] != null)
            {
                <img src="~/images/failed.jpg" width="30" height="30">
                <span style="color: red; font-size:large; " role="alert">
                    @TempData["failed"]
                </span>
                <br />
            }
            @if (TempData["success"] != null)
            {
                <img src="~/images/ok.jpg" width="50" height="50">
                <span style="color: green; font-size:large;" role="alert">
                    @TempData["success"]
                </span>
                <br />
            }
            @using (Html.BeginForm("Delete", "UserRole", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data", @class = "form-material form-horizontal m-t-30" }))
            {
                @Html.AntiForgeryToken()
                @*<form action="#" method="post" class="form-material form-horizontal m-t-30">*@
                @Html.HiddenFor(model => model.Id)
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">User</label>
                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.User.Name)" readonly="readonly">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-sm-12">Role</label>
                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Role.Name)" readonly="readonly">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 m-t-30">
                        <button type="submit" class="btn btn-info waves-effect waves-light m-r-10">Delete</button>
                    </div>
                </div>
                <p>

                    <h4> @Html.ActionLink("Back to List", "Index")</h4>

                </p>
            }
            @*</form>*@
            <br />
        </div>
    </div>
</div>

<script>
        $(document).ready(function () {
            $("#manual-in-out2").addClass('collapse in');
            $("#manual-in-out3").addClass('collapse in');

            $("#ur-id").addClass('active');
        });
</script>

